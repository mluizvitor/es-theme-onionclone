<!--
  Theme: Albedo
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>


  <variables>
    <menuFontSizeH1>0.053125</menuFontSizeH1>
    <menuFontSizeBody>0.040625</menuFontSizeBody>
    <menuFontSizeSmall>0.034375</menuFontSizeSmall>
  </variables>

  <!-- Menu Settings -->
  <view name="menu">
    <menuText name="menutext">
      <fontPath>${typefaceBody}</fontPath>
      <fontSize>${fontSizeBody}</fontSize>

      <selectedColor>${fgColor}</selectedColor>
      <selectorColor>${accentColor}</selectorColor>

      <color>${fgColorAlt}</color>
      <separatorColor>${bgColorAlt}</separatorColor>
    </menuText>

    <menuText name="menufooter">
      <fontPath>${typefaceBody}</fontPath>
      <fontSize>${menuFontSizeSmall}</fontSize>
      <color>${fgColor}cc</color>
    </menuText>

    <menuTextSmall name="menutextsmall">
      <fontPath>${typefaceBody}</fontPath>
      <fontSize>${menuFontSizeSmall}</fontSize>
      <color>${accentColor}</color>
    </menuTextSmall>

    <menuGroup name="menugroup">
      <fontPath>${typefaceTitle}</fontPath>
      <fontSize>${menuFontSizeSmall}</fontSize>

      <color>${fgColor}</color>
      <separatorColor>${accentColor}</separatorColor>
      <backgroundColor>${bgColor}</backgroundColor>
    </menuGroup>

    <menuText name="menutitle">
      <fontPath>${typefaceTitle}</fontPath>
      <fontSize>${menuFontSizeH1}</fontSize>
      <color>${fgColor}</color>
    </menuText>

    <menuBackground name="menubg">
      <path>./assets/menu.png</path>
      <size>1 1</size>
      <color>${bgColorAlt}</color>
    </menuBackground>

    <menuButton name="menubutton">
      <path>./assets/button=outline.png</path>
      <filledPath>./assets/button=filled.png</filledPath>
    </menuButton>

    <menuButton name="menubutton" ifSubset="Ratio:5-3">
      <path>./assets/button=outline@2.png</path>
      <filledPath>./assets/button=filled@2.png</filledPath>
    </menuButton>

    <menuSwitch name="menuswitch">
      <pathOn>./assets/icons/menu/toggle=on.png</pathOn>
      <pathOff>./assets/icons/menu/toggle=off.png</pathOff>
    </menuSwitch>

    <menuSwitch name="menuswitch" ifSubset="Ratio:4-3">
      <pathOn>./assets/icons/menu/toggle=on@2.png</pathOn>
      <pathOff>./assets/icons/menu/toggle=off@2.png</pathOff>
    </menuSwitch>

    <menuSwitch name="menuswitch" ifSubset="Ratio:5-3">
      <pathOn>./assets/icons/menu/toggle=on@3.png</pathOn>
      <pathOff>./assets/icons/menu/toggle=off@3.png</pathOff>
    </menuSwitch>
    
    <menuTextEdit name="menutextedit">
      <inactive>./assets/input_inactive.svg</inactive>
      <active>./assets/input_active.svg</active>
    </menuTextEdit>

    <menuIcons name="menuicons">
      <iconSystem>./assets/icons/menu/settings.png</iconSystem>
      <iconUpdates>./assets/icons/menu/upgrade.png</iconUpdates>
      <iconControllers>./assets/icons/menu/game-controller.png</iconControllers>
      <iconGames>./assets/icons/menu/joystick.png</iconGames>
      <iconUI>./assets/icons/menu/paint-brush.png</iconUI>
      <iconSound>./assets/icons/menu/audio.png</iconSound>
      <iconNetwork>./assets/icons/menu/wi-fi.png</iconNetwork>
      <iconScraper>./assets/icons/menu/image.png</iconScraper>
      <iconAdvanced>./assets/icons/menu/library.png</iconAdvanced>
      <iconQuit>./assets/icons/menu/exit.png</iconQuit>
      <iconRetroachievements>./assets/icons/menu/trophy.png</iconRetroachievements>
      <iconKodi>./assets/icons/menu/cinema-film-play.png</iconKodi>
      <iconRestart>./assets/icons/menu/reboot.png</iconRestart>
      <iconShutdown>./assets/icons/menu/power-off-button.png</iconShutdown>
      <iconFastShutdown>./assets/icons/menu/power-off-button.png</iconFastShutdown>
    </menuIcons>

    <menuIcons name="menuicons" ifSubset="Ratio:4-3">
      <iconSystem>./assets/icons/menu/settings@2.png</iconSystem>
      <iconUpdates>./assets/icons/menu/upgrade@2.png</iconUpdates>
      <iconControllers>./assets/icons/menu/game-controller@2.png</iconControllers>
      <iconGames>./assets/icons/menu/joystick@2.png</iconGames>
      <iconUI>./assets/icons/menu/paint-brush@2.png</iconUI>
      <iconSound>./assets/icons/menu/audio@2.png</iconSound>
      <iconNetwork>./assets/icons/menu/wi-fi@2.png</iconNetwork>
      <iconScraper>./assets/icons/menu/image@2.png</iconScraper>
      <iconAdvanced>./assets/icons/menu/library@2.png</iconAdvanced>
      <iconQuit>./assets/icons/menu/exit@2.png</iconQuit>
      <iconRetroachievements>./assets/icons/menu/trophy@2.png</iconRetroachievements>
      <iconKodi>./assets/icons/menu/cinema-film-play@2.png</iconKodi>
      <iconRestart>./assets/icons/menu/reboot@2.png</iconRestart>
      <iconShutdown>./assets/icons/menu/power-off-button@2.png</iconShutdown>
      <iconFastShutdown>./assets/icons/menu/power-off-button@2.png</iconFastShutdown>
    </menuIcons>

    <menuIcons name="menuicons" ifSubset="Ratio:5-3">
      <iconSystem>./assets/icons/menu/settings@3.png</iconSystem>
      <iconUpdates>./assets/icons/menu/upgrade@3.png</iconUpdates>
      <iconControllers>./assets/icons/menu/game-controller@3.png</iconControllers>
      <iconGames>./assets/icons/menu/joystick@3.png</iconGames>
      <iconUI>./assets/icons/menu/paint-brush@3.png</iconUI>
      <iconSound>./assets/icons/menu/audio@3.png</iconSound>
      <iconNetwork>./assets/icons/menu/wi-fi@3.png</iconNetwork>
      <iconScraper>./assets/icons/menu/image@3.png</iconScraper>
      <iconAdvanced>./assets/icons/menu/library@3.png</iconAdvanced>
      <iconQuit>./assets/icons/menu/exit@3.png</iconQuit>
      <iconRetroachievements>./assets/icons/menu/trophy@3.png</iconRetroachievements>
      <iconKodi>./assets/icons/menu/cinema-film-play@3.png</iconKodi>
      <iconRestart>./assets/icons/menu/reboot@3.png</iconRestart>
      <iconShutdown>./assets/icons/menu/power-off-button@3.png</iconShutdown>
      <iconFastShutdown>./assets/icons/menu/power-off-button@3.png</iconFastShutdown>
    </menuIcons>
  </view>
</theme>
<!--
  Theme: Albedo
  Author: mluizvitor
-->

<theme defaultTransition="instant">
  <formatVersion>7</formatVersion>

  <!-- Carousel Config -->
  <view name="system">
    <image name="statusBar" extra="true" ifSubset="StatusBar:statusHidden">
      <visible>false</visible>
    </image>

    <!-- Cards position -->
    <carousel name="systemcarousel">
      <origin>0.5 0.5</origin>
      <pos>0.5 0.5</pos>
      <size>1 1</size>

      <logoSize>0.258333333 0.521875</logoSize>
      <logoScale>1.25</logoScale>
      <maxLogoCount>4</maxLogoCount>
      <logoPos>0.370833333 0.24375</logoPos>
      <type>horizontal</type>

      <color>${bgColor}</color>
      <zIndex>0</zIndex>
      <defaultTransition>instant</defaultTransition>
    </carousel>

    <text name="systemName" extra="true">
      <text>[${system.fullName}]</text>
      <origin>0.5 0.5</origin>y
      <pos>0.5 0.062500</pos>
      <size>0.5 0.125</size>
      <alignment>center</alignment>
      <fontPath>${typefaceTitle}</fontPath>
      <fontSize>${fontSizeSmall}</fontSize>
      <lineSpacing>1.1</lineSpacing>
      <color>ff6666</color>
    </text>

    <text name="earlyAccess" extra="true">
      <text>Early Access Â· v0.230304</text>
      <origin>1 1</origin>y
      <pos>1 0.98</pos>
      <size>1 0</size>
      <alignment>right</alignment>
      <fontPath>${typefaceBody}</fontPath>
      <fontSize>${fontSizeSmall}</fontSize>
      <lineSpacing>1.1</lineSpacing>
      <color>ff666680</color>
      <backgroundColor>ff66661f</backgroundColor>
      <padding>0 0 0.04 0</padding>
    </text>

    <!-- Total games per system -->
    <text name="systemInfo">
      <visible>false</visible>
    </text>

    <!-- System Logo -->
    <image name="logo">
      <path>./assets/logos/placeholder.svg</path>
      <path>./assets/logos/${system.theme}.svg</path>
    </image>

    <!-- Logo Fallback -->
    <text name="logoText">
      <origin>0 0</origin>
      <fontPath>${typefaceBody}</fontPath>
      <fontSize>${fontSizeH2}</fontSize>
      <lineSpacing>0.7</lineSpacing>
      <color>${fgColor}</color>
    </text>
  </view>
</theme>
  
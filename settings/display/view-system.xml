-->

<theme defaultTransition="instant">
  <formatVersion>7</formatVersion>

  <!-- Carousel Config -->
  <view name="system">
    <image name="statusBar" extra="true" ifSubset="StatusBar:statusHidden">
      <visible>false</visible>
    </image>

    <!-- Cards position -->
    <carousel name="systemcarousel">
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 1</size>

      <logoSize>1 1</logoSize>
      <logoScale>1.375</logoScale>
      <maxLogoCount>5</maxLogoCount>
      <logoPos>0 0</logoPos>
      <type>horizontal</type>

      <color>${bgColor}</color>
      <zIndex>0</zIndex>
      <defaultTransition>instant</defaultTransition>
    </carousel>

    
    <!-- Total games per system -->
    <text name="systemInfo">
      <visible>false</visible>
    </text>

    <!-- System Logo -->
    <image name="logo">
      <path>./assets/logos/${system.theme}.svg</path>
    </image>

    <image name="logo" ifSubset="Logos:styleMono">
      <path>./assets/logos/mono/${system.theme}.svg</path>
      <color>${bgColorAlt}</color>
    </image>

    <!-- Logo Fallback -->
    <text name="logoText">
      <origin>0 0</origin>
      <fontPath>${typefaceBody}</fontPath>
      <fontSize>${fontSizeH2}</fontSize>
      <lineSpacing>0.7</lineSpacing>,

      <color>${fgColor}</color>
    </text>
  </view>
</theme>
  
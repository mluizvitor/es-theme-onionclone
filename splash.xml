<!--
  Theme: Albedo
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <view name="splash">
    <splash name="splash">
      <backgroundColor>242630</backgroundColor>
    </splash>

    <image name="background">
      <path>./assets/brand.png</path>
      <size></size>
    </image>
    <image name="progressbar">
      <path>./assets/progress=unfilled.png</path>
      <tile>true</tile>
      <pos>0 1</pos>
      <origin>0 1</origin>
      <maxSize>1 0.025</maxSize>
      <minSize>1 0.025</minSize>
      <roundCorners>0</roundCorners>
      <color>ffffff80</color>
    </image>
    <image name="progressbar:active">
      <path>./assets/progress=filled.png</path>
      <tile>true</tile>
      <pos>0 1</pos>
      <origin>0 1</origin>
      <maxSize>1 0.025</maxSize>
      <minSize>1 0.025</minSize>
      <roundCorners>0</roundCorners>
      <color>ffffff</color>
    </image>
    <text name="label">
      <alignment>left</alignment>
      <origin>0 1</origin>
      <fontPath>./assets/fonts/Exo_2/Exo2-BoldItalic.ttf</fontPath>
      <fontSize>0.05</fontSize>
      <color>ffffff</color>
      <pos>0.016666667 0.95</pos>
    </text>
  </view>
</theme>
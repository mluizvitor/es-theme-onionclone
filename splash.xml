<!--
  Theme: Albedo
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <view name="splash">
    <splash name="splash">
      <backgroundColor>242630</backgroundColor>
    </splash>

    <image name="background">
      <!-- Leave default for better OS/device portability -->
    </image>
    <image name="progressbar">
      <pos>0 1</pos>
      <origin>0 1</origin>
      <size>1 0.025</size>
      <color>1D1E25</color>
      <roundCorners>0</roundCorners>
    </image>
    <image name="progressbar:active">
      <pos>0 1</pos>
      <origin>0 1</origin>
      <size>1 0.025</size>
      <color>7247C2</color>
    </image>
    <text name="label">
      <alignment>center</alignment>
      <fontPath>./assets/fonts/Teko/Teko-SemiBold.ttf</fontPath>
      <fontSize>0.05</fontSize>
      <color>ffffff</color>
    </text>
  </view>
</theme>